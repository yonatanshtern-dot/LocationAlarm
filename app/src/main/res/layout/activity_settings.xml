<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt; חזור"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="הגדרות חשבון"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"/>

        <Space
            android:layout_width="64dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="העדפות כלליות"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="16dp"/>

                    <Button
                        android:id="@+id/btnChangeSound"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="שינוי צליל התראה"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_button_rounded"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="אבטחה ופרטיות"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="16dp"/>

                    <Button
                        android:id="@+id/btnToggleChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="שינוי סיסמה"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_button_rounded"/>

                    <LinearLayout
                        android:id="@+id/layoutChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_edittext_rounded"
                        android:padding="16dp"
                        android:backgroundTint="#F5F7FA"> <EditText
                        android:id="@+id/etOldPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="סיסמה נוכחית"
                        android:inputType="textPassword"
                        android:background="@drawable/bg_edittext_rounded"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="14sp"/>

                        <EditText
                            android:id="@+id/etNewPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="סיסמה חדשה (6 תווים לפחות)"
                            android:inputType="textPassword"
                            android:background="@drawable/bg_edittext_rounded"
                            android:padding="12dp"
                            android:layout_marginBottom="16dp"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="14sp"/>

                        <Button
                            android:id="@+id/btnSaveNewPassword"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="שמור סיסמה חדשה"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:background="@drawable/bg_button_rounded"
                            app:backgroundTint="#27AE60"/> </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="אזור מסוכן"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#D32F2F"
                        android:layout_marginBottom="16dp"/>

                    <Button
                        android:id="@+id/btnLogout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="התנתקות מהחשבון"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_button_rounded"
                        app:backgroundTint="#EF5350"
                        android:layout_marginBottom="12dp"/>

                    <Button
                        android:id="@+id/btnDeleteAccount"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="מחיקת חשבון (לצמיתות)"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_button_rounded"
                        app:backgroundTint="#C62828"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>